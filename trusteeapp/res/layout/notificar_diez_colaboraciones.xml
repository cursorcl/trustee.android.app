<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="3dp"
    android:alwaysDrawnWithCache="true"
    android:background="@drawable/backmessage"
    android:baselineAligned="false"
    android:clickable="false"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:duplicateParentState="false"
    android:fadingEdge="vertical"
    android:fitsSystemWindows="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="bottom|right"
    android:longClickable="false"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="false" >

    <TextView
        android:id="@+id/txtNroEntrante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:background="@color/background2"
        android:gravity="center_horizontal"
        android:text="@string/felicitaciones_"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />

    <TextView
        android:id="@+id/txtValidaciones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/background3"
        android:gravity="center_horizontal"
        android:text="es tu identificación número "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/txtNro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/background3"
        android:gravity="center_horizontal"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/title_background"
        android:textStyle="bold"
        android:typeface="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="54dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/felicidades" />

        <TextView
            android:id="@+id/txtColaboraciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:text="Gracias por colaborar con TrusteeApp! \nCuéntales a otros sobre nosotros y síguenos en twitter!"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textColor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <Button
            android:id="@+id/btnNoDiezValidaciones"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="1dp"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btnSiDiezValidaciones"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            android:text="Compartir" />

    </LinearLayout>

</LinearLayout>